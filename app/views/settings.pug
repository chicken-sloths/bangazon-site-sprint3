extends layout

block content
  h1 Settings
  h3 #{first_name} #{last_name}
  .row
    .col-6.card 
      .card-title.text-center Address
      p=street_address
      p #{city}, #{state}
      p=postal_code
    .col-6.card
      .card-title.text-center Contact
      p Phone: 
        b=phone_number
      p Email: 
        b=email
  .row.mt-5
    a.btn.btn-primary.mx-auto(href='/settings/edit') Edit Your Information
    a.btn.btn-primary.mx-auto(href='/payment/manage') Manage Payment Options
    
