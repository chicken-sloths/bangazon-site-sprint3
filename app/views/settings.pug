extends layout

block content
  h1.text-center Settings
  .container-fluid
    h3 #{first_name} #{last_name}
    .row
      .col-6.card 
        .card-title.text-center Address
        p=street_address
        p #{city}, #{state}
        p=postal_code
      .col-6.card
        .card-title.text-center Contact
        p Phone: 
          b=phone_number
        p Email: 
          b=email
    .row
      a.btn.btn-primary(href='/payment/manage') Manage Payment Options
